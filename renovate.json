{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["forgejo/renovate-config"],
  "flux": {
    "fileMatch": ["^flux/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["^flux/.+\\.ya?ml$"]
  },
  "packageRules": [
    {
      "description": "override pr title for charts (otherwise it shows as docker image update)",
      "matchPackageNames": [
        "code.forgejo.org/forgejo-helm/forgejo",
        "ghcr.io/traefik/helm/traefik",
        "**{,/}bitnamicharts/cert-manager"
      ],
      "commitMessageTopic": "helm chart {{depName}}"
    },
    {
      "description": "disable forgejo helm major updates of old versions",
      "matchPackageNames": ["code.forgejo.org/forgejo-helm/forgejo"],
      "matchUpdateTypes": ["major"],
      "matchFileNames": [
        "flux/apps/forgejo-next",
        "flux/apps/forgejo-next-v{7,8}"
      ],
      "enabled": false
    }
  ]
}
